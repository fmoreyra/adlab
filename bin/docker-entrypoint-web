#!/usr/bin/env bash

set -e

# Copy documentation to STATIC_ROOT if it exists in the repository
# Docs are committed to /app/public_collected/docs/ but need to be in /public_collected/docs/
# for WhiteNoise to serve them properly
if [ -d "/app/public_collected/docs" ]; then
    echo "ðŸ“š Copying documentation to STATIC_ROOT..."
    mkdir -p /public_collected/docs
    cp -r /app/public_collected/docs/* /public_collected/docs/
    echo "âœ… Documentation copied successfully"
fi

exec "$@"
